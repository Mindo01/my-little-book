{
    "manifest_version": 2,
    "name": "나의 작은 소설책",
    "version": "0.0.1",
  
    "default_locale": "ko",
    "description": "",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
  
    "sidebar_action": {
        "default_page": "sidebar.html",
        "default_icon": {  
            "16": "images/icon16.png"
        },
        "default_title": "my little book",
        "use_navigation_bar": true,
        "mobile_user_agent": false
    },

    "background": {
        "scripts": [
            "main.js"
        ],
        "persistent": false
    },
    "devtools_page": "devtools.html",
    "options_page": "options.html",
    "options_ui": {
      "chrome_style": true,
      "page": "options.html"
    },
    "permissions": [
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
  }
  